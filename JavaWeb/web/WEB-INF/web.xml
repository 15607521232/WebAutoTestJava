        <servlet-class>day09.ServerletLearn.SetServletContext</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetServletContext</servlet-name>
        <url-pattern>/SetServletContext</url-pattern>
    </servlet-mapping>
