           version="4.0">

    <servlet>
        <servlet-name>ServletLearn1</servlet-name>
        <servlet-class>day09.ServerletLearn.ServletLearn1</servlet-class>
        <init-param>
            <param-name>p1</param-name>
            <param-value>v1</param-value>
